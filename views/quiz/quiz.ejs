<h1>All quiz</h1>


<div class="w3-row-padding w3-grayscale">
    <% quiz.forEach(function(quiz){ %>

        <div class="w3-col m4 w3-margin-bottom quiz-list" onclick="location.href='/quiz/<%= quiz.id %>'">
            <div class="w3-light-grey">
                <div class="w3-container">
                    <h3><%= quiz.title %></h3>
                    <p class="w3-opacity">
                        <%= quiz.author %>
                    </p>
                    <p>
                        <%= quiz.description %>
                    </p>
                </div>
            </div>
        </div>

        <% }); %>
</div>

<button class="w3-button w3-red w3-padding-large w3-hover-black" onclick="location.href='/quiz/new'">New</button>